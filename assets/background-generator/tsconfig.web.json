{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Bundler",
        "rootDir": ".",
        "outDir": "web/dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["ts/lib/**/*.ts", "web/app.ts"],
    "exclude": ["node_modules", "ts-outputs", "outputs"]
}
