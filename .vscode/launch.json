{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "MkDocs: Serve",
      "type": "python",
      "request": "launch",
      "module": "mkdocs",
      "args": ["serve"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "MkDocs: Build (Debug)",
      "type": "python",
      "request": "launch",
      "module": "mkdocs",
      "args": ["build"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    {
      "name": "MkDocs: Build Clean (Debug)",
      "type": "python",
      "request": "launch",
      "module": "mkdocs",
      "args": ["build", "--clean"],
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    }
  ]
}
