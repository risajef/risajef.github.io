{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MkDocs: Build",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/mkdocs",
      "args": [
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "MkDocs: Deploy",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/mkdocs",
      "args": [
        "gh-deploy"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
